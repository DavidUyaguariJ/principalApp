@if (ViewContext.ModelState.IsValid == false)

{
    <div class="alert alert-danger alert-dismissible alert-additional fade show mb-xl-0 text-start" role="alert">
        <div class="alert-body">
            <div class="d-flex">
                <div class="flex-shrink-0 me-3">
                    <i class="ri-error-warning-line fs-16 align-middle"></i>
                </div>
                <div class="flex-grow-1">
                    <h5 class="alert-heading">Error !</h5>
                    <div asp-validation-summary="All" class="danger sitemap-horizontal"></div>
                </div>
            </div>
        </div>
    </div>
}